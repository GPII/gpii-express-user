{{#if message}}
    <div class="callout alert" tabindex="0" aria-live="assertive" role="alertdialog">
        <p>{{message}}</p>
        <div class="fieldErrors">
            <ul>
                {{#each fieldErrors}}
                    <li>{{message}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
{{/if}}
